{
	"compilerOptions": {
		"sourceMap": true,
		"noImplicitAny": false,
		"module": "commonjs",
		"target": "ES6",
		"lib": [
			"esnext",
			"dom",
			"dom.iterable"
		],
		"removeComments": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "react",
		"allowJs": true,
		"baseUrl": "./",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"downlevelIteration": true,
		"paths": {
			"components/*": [
				"src/components/*"
			]
		},
        "typeRoots": ["node_modules/@types", "src/ts"]
	},
	"include": [
		"./src",
		"./webpack.config.ts"
	],
    "exclude": [
        "node_modules"
    ]
}
